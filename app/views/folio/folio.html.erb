<!DOCTYPE html>
<html lang="en">
  
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<body id="page-top">
<!-- Navigation -->
<nav class="navbar navbar-expand-lg bg-secondary fixed-top" id="mainNav">
    <div class="container">
      <a class="navbar-brand js-scroll-trigger" href="/">GitFolio</a>
      <button class="navbar-toggler navbar-toggler-right text-uppercase bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fa fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">About</a>
          </li>
          <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Project</a>
          </li>
          <li class="nav-item mx-0 mx-lg-1">
            <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">Contact</a>
          </li>
 
          <% if user_signed_in? %>
          <li class="nav-item mx-0 mx-lg-1">
            <%= link_to "logout", destroy_user_session_path, method: "DELETE" , class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger"%></a>
          </li>
          <% else %>
          <li class="nav-item mx-0 mx-lg-1">
             <%= link_to "log in", new_user_session_path, class: "nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" %></a>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<!-- Header -->
<!-- Page Content -->
<div class="container">
    <header id="about">
    <!-- Portfolio Item Heading -->
    <br><br><br><br>
    <h2 class="my-4"><%=@name %>님의 Portfolio</h2>

    <!-- Portfolio Item Row -->
    <div class="row">

      <div class="col-md-4">
        <img class="img-fluid" src="http://placehold.it/300x200" alt="">
      </div>
      <div class="col-md-4">
        <h3 class="my-3">About <%=@user.name %></h3>
        <hr>
        <ul>
          <li>job : <%=@user.job %></li>
          <li>email : <%=@user.email %></li>
          <li>phone : <%=@user.phone %></li>
          <li>address : <%=@user.address %></li>
          <li>github : <a href="https://github.com/<%=@name %>"><%=@name %></a></li>
        </ul>  
      </div>
      </div>
      <br><br>
      <div class="row">
      <div class="col-md-4">
          <h3 class="my-3">Skills</h3>
          <hr>
          
    <%= pie_chart @graphs.group(:lang).count ,colors: ["#BAF2BB", "#BAF2D8","#BAD7F2","#F2BAC9","#ffb3b3","F2E2BA","#ccff66"] , library: {pieHole: 0.5} %> 
        
      </div>
      <div class="col-md-4">
        <% if user_signed_in? %>
        <% if current_user.nick==@folio.user_id %>
            <a class="portfolio-item d-block mx-auto" href="#portfolio-modal-ex" style="position: absolute; right: 12px;">
              추가
            </a>
        <% end %>
        <% end %>
        <h3 class="my-3">Experience</h3>
        <hr>
        <% @experiences.each do |e| %>
                <div style="position: absolute; right: 12px;">
                  
        <% if user_signed_in? %>
          <% if current_user.nick==@folio.user_id %>
        <a class="alert-link" href="/folio/delete/<%=e.id %>">삭제 |</a>
         <a class="portfolio-item d-block mx-auto" href="#portfolio-modal-ex-<%=e.id %>" style="font-weight: bold;">
              수정
        </a>
        <% end %>
        <% end %>
        </div>
        <p style="font-size: 28px; font-weight: bold;"><%=e.name %></p>
        <p style="font-size: 15px; font-weight: bold;"><%=e.work %></p>
        <p style="font-size: 10px; font-weight: bold;"><%=e.start %>~<%=e.end %></p>
        <ul>
          <li><%=e.content %></li>
        </ul>
        <hr style="border: dotted 1px #d9d9d9";>
         <% end %>
      </div>
      <div class="col-md-4">
          <h3 class="my-3">introduce</h3>
          <hr>
          <div id="intro" style="margin:20px;padding:20px;background-color:#E0F8F75e;height:250px; border-radius:20px;overflow-y:auto">
            <%=raw @folio.intro.gsub(/\n/, '<br>')%>
            
          </div>
      </div>
    </div>
  </header>
    <!-- Portfolio Grid Section -->
    <section class="portfolio" id="portfolio">
      <div class="container">
        <h2 class="text-center text-uppercase text-secondary mb-0">Project</h2>
        <hr>
        
        
        <div class="row">
          <% @infos.each do |info| %>
          
          <div class="col-md-6 col-lg-4">
            <a class="portfolio-item d-block mx-auto" href="#portfolio-modal-<%=info.id%>" style="text-align: center; text-decoration: none;">
             
              <div class="portfolio-item-caption d-flex position-absolute h-200 w-100">
                <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
                  <i class="fa fa-search-plus fa-3x"></i>
                </div>
              </div>
              <div style="font-size: 30px; color: #333333;">
               <p> <%= info.list %></p>
              </div>
            </a>
          </div>
          
          <% end %>
          
  
          
        </div>
      </div>
    </section>

<br><br>
    <!-- Contact Section -->
    <section id="contact">
      <div class="container">
        <h2 class="text-center text-uppercase text-secondary mb-0">Contact Me</h2>
        <hr class="star-dark mb-5">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
            <!-- The form should work on most web servers, but if the form is not working you may need to configure your web server differently. -->
            <form name="sentMessage" id="contactForm" novalidate="novalidate">
              <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <label>Name</label>
                  <input class="form-control" id="name" type="text" placeholder="Name" required="required" data-validation-required-message="Please enter your name.">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <label>Email Address</label>
                  <input class="form-control" id="email" type="email" placeholder="Email Address" required="required" data-validation-required-message="Please enter your email address.">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <label>Phone Number</label>
                  <input class="form-control" id="phone" type="tel" placeholder="Phone Number" required="required" data-validation-required-message="Please enter your phone number.">
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                  <label>Message</label>
                  <textarea class="form-control" id="message" rows="5" placeholder="Message" required="required" data-validation-required-message="Please enter a message."></textarea>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <br>
              <div id="success"></div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">Send</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
      <div class="container">
        <div class="row">
        <div class="col-md-4">
            <h4 class="text-uppercase mb-4">About Team</h4>
            <p class="lead mb-0">Inha University
            <p class="lead mb-0"><a href="https://likelion.net/">LikeLion 6기</a> 제주많은 소녀들</p>
          </div>
          <div class="col-md-4 mb-5 mb-lg-0">
            <h4 class="text-uppercase mb-4">Around the Web</h4>
            <ul class="list-inline mb-0">
              <li class="list-inline-item">
                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="https://www.github.com/">
                  <i class="fa fa-fw fa-github"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="https://www.facebook.com/">
                  <i class="fa fa-fw fa-facebook"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="https://www.google.com/">
                  <i class="fa fa-fw fa-google"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="https://www.twitter.com/">
                  <i class="fa fa-fw fa-twitter"></i>
                </a>
              </li>
              <li class="list-inline-item">
                <a class="btn btn-outline-light btn-social text-center rounded-circle" href="https://kr.linkedin.com/">
                  <i class="fa fa-fw fa-linkedin"></i>
                </a>
              </li>
            </ul>
          </div>
          <div class="col-md-4 mb-5 mb-lg-0">
            <h4 class="text-uppercase mb-4">Let's get in touch</h4>
            <p class="lead mb-0">phone : 010-3691-9891
            <p class="lead mb-0">email : khr6604@gmail.com
          </div>
        </div>
      </div>
    </footer>

    <div class="copyright py-4 text-center text-white">
      <div class="container">
        <small>Copyright &copy; Your Website 2018</small>
      </div>
    </div>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-to-top d-lg-none position-fixed ">
      <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
        <i class="fa fa-chevron-up"></i>
      </a>
    </div>

    <!-- ============================================Portfolio Modals============================================ -->

    <!-- Project Modal -->
    <% @infos.each do |info| %>
    <% @readme = @readmes.find_by_rid(info.id)%>
    <div class="portfolio-modal mfp-hide" id="portfolio-modal-<%=info.id%>">
      <div class="portfolio-modal-dialog bg-white">
        <a class="close-button d-none d-md-block portfolio-modal-dismiss" href="#portfolio">
          <i class="fa fa-3x fa-times"></i>
        </a>
        <div class="container text-center">
          <div class="row">
            <div class="col-lg-8 mx-auto">
              <h2 class="text-secondary"><%=info.list%></h2>
              <hr class="star-dark mb-5">
              <div id="readmebox" style="border:5px dotted lightgray;padding:30px;margin:10px;"><%=raw @readme.readme %></div>
              <p class="mb-5"><a href="https://github.com/<%=@folio.gid%>/<%=info.list%>"><%=info.list%> 레파지토리로 이동하기</a></p>
              <a class="btn btn-primary btn-lg rounded-pill portfolio-modal-dismiss" href="#portfolio">
                <i class="fa fa-close"></i>
                Close Project</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>

  <!-- 추가 Modal -->
    <div class="portfolio-modal mfp-hide" id="portfolio-modal-ex">
      <div class="portfolio-modal-dialog bg-white">
        <a class="close-button d-none d-md-block portfolio-modal-dismiss" href="#portfolio">
          <i class="fa fa-3x fa-times"></i>
        </a>
        <div class="container text-center">
          <div class="row">
            <div class="col-lg-8 mx-auto">
              <h2 class="text-secondary">경력 추가하기</h2>
              <hr>
              <form action="/folio/excreate" method="post">
    <%=hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="name">회사명</label><br>
    <input type="text" name="name" class="exp"><br>
    
     <label for="work">직책/직무</label><br>
    <input type="text" name="work" class="exp"><br>
    
     <label for="start">시작날짜</label><br>
    <input type="date" name="start" class="exp"><br>
    
     <label for="end">종료날짜</label><br>
    <input type="date" name="end" class="exp"><br>
    
    <label for="content">설명</label><br> 
    <textarea name="content" id="content"></textarea><br>
    <input type="submit" value="등록" id="send" class="btn btn-primary btn-lg rounded-pill">
    
              <a class="btn btn-primary btn-lg rounded-pill portfolio-modal-dismiss" href="#portfolio">
                <i class="fa fa-close"></i>
                취소</a>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 수정 Modal -->
     <% @experiences.each do |e| %>
        <div class="portfolio-modal mfp-hide" id="portfolio-modal-ex-<%=e.id %>">
      <div class="portfolio-modal-dialog bg-white">
        <a class="close-button d-none d-md-block portfolio-modal-dismiss" href="#portfolio">
          <i class="fa fa-3x fa-times"></i>
        </a>
        <div class="container text-center">
          <div class="row">
            <div class="col-lg-8 mx-auto">
              <h2 class="text-secondary">경력 추가하기</h2>
              <hr>
              <form action="/folio/update/<%=e.id %>" method="post">
    <%=hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="name">회사명</label><br>
    <input type="text" name="name" class="exp" value="<%=e.name %>"><br>
    
     <label for="work">직책/직무</label><br>
    <input type="text" name="work" class="exp" value="<%=e.work %>"><br>
    
     <label for="start">시작날짜</label><br>
    <input type="date" name="start" class="exp" value="<%=e.start %>"><br>
    
     <label for="end">종료날짜</label><br>
    <input type="date" name="end" class="exp" value="<%=e.end %>"><br>
    
    <label for="content">설명</label><br> 
    <textarea name="content" id="content"><%=e.content %></textarea><br>
    <input type="submit" value="수정" id="send" class="btn btn-primary btn-lg rounded-pill">
    
              <a class="btn btn-primary btn-lg rounded-pill portfolio-modal-dismiss" href="#portfolio">
                <i class="fa fa-close"></i>
                취소</a>
                </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    
  </body>

</html>
